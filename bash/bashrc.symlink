export CLICOLOR=1
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export EDITOR="nvim"

. ~/.bash.d/functions.bash
. ~/.bash.d/aliases.bash
. ~/.bash.d/prompt.bash
. ~/.bash.d/git-completion.bash

# Init anyenv
export PATH="$HOME/.anyenv/bin:$PATH"
eval "$(anyenv init -)"

# Init direnv
eval "$(direnv hook bash)"

export PATH="./node_modules/.bin:$HOME/.bin:$PATH"
