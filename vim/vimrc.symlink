execute pathogen#infect()
silent execute pathogen#helptags()

" Automatic reloading of .vimrc
autocmd! bufwritepost .vimrc source %

" General settings
set encoding=utf-8
set nocompatible
set noswapfile

" Display settings
colorscheme tomorrow-night
set t_Co=256
set guioptions=aAce
set laststatus=2
set showmode

" Editor settings
set number
set colorcolumn=80
set ruler
syntax on
" Allow backspacing over everything in inset mode
set backspace=indent,eol,start
" Load plugin and indent settings for detected filetype
filetype plugin indent on

" Whitespace settings
set autoindent
set smartindent
set nowrap
set softtabstop=2
set shiftwidth=2
set tabstop=4
set expandtab
set nosmarttab
set textwidth=80
set list listchars=tab:»·,trail:·

" Searching settings
set hlsearch
set ignorecase
set smartcase

" Disable cursors
nnoremap <Left> :echoe "Use h"<CR>
nnoremap <Right> :echoe "Use l"<CR>
nnoremap <Up> :echoe "Use k"<CR>
nnoremap <Down> :echoe "Use j"<CR>

" Mappings for tabs
nnoremap ti :tabnew<CR>
nnoremap th :tabfirst<CR>
nnoremap tj :tabnext<CR>
nnoremap tk :tabprev<CR>
nnoremap tl :tablast<CR>
nnoremap td :tabclose<CR>

" Mappings for windows
nnoremap wh <c-w>h
nnoremap wj <c-w>j
nnoremap wk <c-w>k
nnoremap wl <c-w>l
nnoremap wd :close<CR>

" Moving block of codes
vnoremap < <gv
vnoremap > >gv

" CommandT settings
let g:CommandTMaxHeight=10

" JavaScript
let g:javascript_enable_domhtmlcss=1

" NerdTree
nnoremap <F3> :NERDTreeToggle<CR>
let g:NERDTreeChDirMode=2
let NERDTreeMinimalUI=1
let NERDTreeDirArrows=1

" Tagbar
nnoremap <F4> :TagbarToggle<CR>

" Syntastic
let g:syntastic_check_on_open=1
let g:syntastic_javascript_checkers=['jshint']
let g:syntastic_ruby_checkers=['mri']
let g:syntastic_ruby_exec = 'ruby19'
let g:syntastic_ruby_exec = '~/.rbenv/versions/1.9.3-p484/bin/ruby'

" Automatically resize splits when resizing MacVim window
if has("gui_running")
  autocmd VimResized * wincmd =
endif

" Additional settings for programming languages
" Ruby
au BufNewFile,BufRead Capfile,Gemfile,Gemfile.lock,Guardfile,Rakefile,*.rake set filetype=ruby
" JSON & Javascript
au BufNewFile,BufRead  *.json set ft=json
" Handlebars templates
au BufNewFile,BufRead *.hb set ft=handlebars
" SCSS
autocmd FileType scss setlocal iskeyword+=-,$,@
