AllCops:
  Exclude:
    - tmp/**/*
    - vendor/**/*
    - bin/**/*
    - spec/dummy/bin/**/*

Documentation:
  Enabled: false

Metrics/BlockLength:
  ExcludedMethods: ['describe', 'context', 'feature']

Metrics/LineLength:
  Max: 110

Style/FrozenStringLiteralComment:
  Enabled: true

Style/StringLiterals:
  EnforcedStyle: double_quotes
